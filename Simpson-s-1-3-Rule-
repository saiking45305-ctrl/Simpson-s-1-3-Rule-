
                                                          //Simpson-s-1-3-rule
#include <stdio.h>
         #include <math.h>

// Function to integrate (example: f(x) = x^2)
double f(double x) {
    return x * x;
}

double simpsonsOneThirdRule(double a, double b, int n) {
    double h = (b - a) / n;
    double sum = f(a) + f(b);
    
    // Apply Simpson's 1/3 rule
    for (int i = 1; i < n; i++) {
        if (i % 2 == 0) {
            sum += 2 * f(a + i * h);
        } else {
            sum += 4 * f(a + i * h);
        }
    }

    return (h / 3) * sum;
}

int main() {
    double a = 0, b = 1;  // limits of integration
    int n = 6;  // number of intervals (should be even)
    
    double result = simpsonsOneThirdRule(a, b, n);
    printf("Integral using Simpson's 1/3 Rule: %.4f\n", result);
    
    return 0;
}
